                <%= submit_tag "Search", :name => nil %>
            <% end %>
      </div>
    </nav>

    <div class="container">
      <% if !flash.empty? %>
          <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
              <% flash.each do |key, value| %>
                <% if key == 'notice' %>
                  <div class="alert alert-success"><%= value %></div>
                <% elsif key == 'alert' %>
                  <div class="alert alert-danger"><%= value %></div>
                <% else %>
                  <div class="alert alert-<%= key %>"><%= value %></div>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>

      <%= yield %>
